/* --------------------------------------------------
Variables
-------------------------------------------------- */
white = #fff;
blue = #21476a;
dark-red = #720707;
grey = #616161;
dark-grey = #333333;

/* --------------------------------------------------
Fonts
-------------------------------------------------- */
body {
  font-size: 100%;
  padding: 0;
}
  
h1, h2, h3, h4 {
  margin: 0;
}

h2 {
  font-size: 2em;
  color: white;
}

h3 {
  color: #414959;
  font-size: 2em;
}

p {
  margin: 0;
}

label {
  font-size: 1.125em;
}

/* --------------------------------------------------
Buttons
-------------------------------------------------- */
.button {
  border-radius: 11px;
  color: white;
  border: none;
  cursor: pointer;
  font-size: 1.125em;
  
  &:focus {
    outline: none;
  }
}
  
.button--blue {
  background: blue;
}
  
.button--red {
  background: dark-red;
}

.button--grey {
  background: grey;
}

.button--dark-grey {
  background: dark-grey;
}

.button--large {
  font-size: 2em;
  padding: 10px 50px;
  margin-top: 20px;
}

.button--medium {
  text-transform: uppercase;
  padding: 15px 50px;
}

/* --------------------------------------------------
Inputs
-------------------------------------------------- */

input {
  border-radius: 11px;
  border: 1px solid #dadbdb;
  
  &:focus {
    outline: none;
  }
  
  &.input--large {
    margin-bottom: 20px;
    font-size: 2em;
    border: none;
    width: 580px;
    padding: 20px 30px;
  }
}

.input--field-horizontal {
  label {
    text-align: right;
    display: inline-block;
    width: 50px;
    margin-right: 15px;
  }
}

.input--field-inline {
  display: table;
  border-collapse: separate;
  
  input {
    padding: 13px 20px;
    font-size: 1.125em;
    display: table-cell;
    border-radius: 11px 0 0 11px;
    z-index: 2;
    position: relative;
  }
    
  span {
    display: table-cell;
    vertical-align: middle;
  
    button {
      margin-left: -1px;
      border-radius: 0 11px 11px 0;
      vertical-align: middle;
      padding: 13px 20px;
      font-size: 1.1em;
      border: 1px solid #dadbdb;
      background: white;
      cursor: pointer;
      
      &:focus {
        outline: none;
      }
    }
  }
}

.select {
  position: relative;
  display: inline-block;
  margin-bottom: 25px;
  
  select {
    height: 44px;
    width: 165px;
    padding: 13px 20px;  
    margin: 0;
    -webkit-border-radius: 11px;
    -moz-border-radius: 11px;
    border-radius: 11px;
    background: #ffffff;
    color: #141414;
    border: 1px solid #dadbdb;
    outline: none;
    display: inline-block;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    cursor: pointer;
    
    
    @media screen and (-webkit-min-device-pixel-ratio:0) {
      padding-right: 18px;
    }
  }
  
  &:after {
    content: '^';
    color: #141414;
    position: absolute;
    right: 0px;
    height: 44px;
    width: 40px;
    border-left: 1px solid #dadbdb;
    line-height: 44px;
    pointer-events: none;
    text-align: center;
    background: transparent;
    z-index: 1;
    top: 0;
    border-radius: 0 11px 11px 0;
    
  }
}

/* --------------------------------------------------
Pages
-------------------------------------------------- */

.page {
  text-align: center;
  padding-top: 65px;
  
  .logo {
    margin-bottom: 100px;
  }  
}