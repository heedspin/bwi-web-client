/* --------------------------------------------------
Variables
-------------------------------------------------- */

blue = #19334e;
lightBlue = #7589a1;
red = #720707;
lightRed = #a84e4e;
grey = #333333;
lightGrey = #a3a3a3;
medGrey = #616161;

beige = #fbf3e2;


/* --------------------------------------------------
Fonts
-------------------------------------------------- */
body {
  font-size: 100%;
  padding: 0;
  background: beige;
}

h1, h2, h3, h4 {
  margin: 0;
}

p {
  margin: 0;
}

label {
  font-size: 1.125em;
}

/* --------------------------------------------------
Buttons
-------------------------------------------------- */
a {
  text-decoration: none;
}

.button {
  border-radius: 11px;
  color: white;
  border: none;
  cursor: pointer;
  font-size: 1.125em;

  &:focus {
    outline: none;
  }

  &:active {
    background: grey;
  }
}

.button--blue {
  background: blue;

  &:hover {
    background: lightBlue;
  }
}

.button--red {
  background: red;

  &:hover {
    background: lightRed;
  }
}

.button--grey {
  background: grey;

  &:hover {
    background: lightGrey;
  }
}

.button--med-grey {
  background: medGrey;

  &:hover {
    background: lightGrey;
  }
}

.button--light-grey {
  background: lightGrey;

  &:hover {
    background: darken(lightGrey, 5%);
  }
}

.button--large {
  font-size: 2em;
  padding: 10px 50px;
  margin-top: 20px;
}

.button--medium {
  text-transform: uppercase;
  padding: 15px 50px;
}

/* --------------------------------------------------
Inputs
-------------------------------------------------- */

input {
  border: 1px solid #DDD;
  border-radius: 11px;

  &:focus {
    outline: none;
  }

  &.input--large {
    margin-bottom: 20px;
    font-size: 2em;
    border: none;
    width: 580px;
    padding: 20px 30px;
  }

}

.input--field-horizontal {
  display: inline-block;

  label {
    text-align: right;
    display: inline-block;
    width: 50px;
    margin-right: 8px;
  }
}

.input--field-inline {
  display: table;
  border-collapse: separate;

  input {
    padding: 13px 20px;
    font-size: 1.125em;
    display: table-cell;
    border-radius: 11px 0 0 11px;
    z-index: 2;
    position: relative;
  }

  i {
    display: table-cell;
    vertical-align: middle;
    font-size: 1.4em;
    color: lightGrey;
    background: white;
    border: 1px solid #dadbdb;
    border-radius: 0 11px 11px 0;
    width: 63px;
    text-align: center;
    margin-left: -1px;
  }
}

.selectize-dropdown {
  border: 0px solid;
}

.selectize-dropdown-content {
  max-height: 500px;
}

.select {
  margin-bottom: 25px;
  padding-left: 30px;

  label {
    display: inline-block;
    vertical-align: top;
    margin-top: 10px;
    width: 70px;
    text-align: right;
    margin-right: 13px;
    text-transform: uppercase;
  }

  .ui-select-container {
    display: inline-block;
    width: 165px;
  }

  .selectize-input > * {
    font-size: 1.2em;
  }

  .selectize-control.single .selectize-input:after {
    content: "\e601";
    font-family: 'icomoon';
    width: 42px;
    text-align: center;
    line-height: 50px;
    border-radius: 0 11px 11px 0;
    margin-top: 0;
    border: none;
    right: 0px;
    color: black;
    font-size: 1.5em;
    border-left: 1px solid #dadbdb;
    height: 47px;
    top: 0;
    border-radius: 0 11px 11px 0;
  }
}

/* --------------------------------------------------
Pages
-------------------------------------------------- */

.page {
  text-align: center;
  padding-top: 65px;
  .logo {
    margin-bottom: 100px;
  }
}

/* --------------------------------------------------
General Elements
-------------------------------------------------- */

html, body {
  height: 100%;
}

[state] {
  height: 100%;
}

.wrapper {
  min-height: 100%;
  margin-bottom: -150px;

  &:after {
    content: "";
    display: block;
    height: 150px;
  }
}

div[template-url="templates.pagination"] {
  display: none;
}

.spinner {
  left: 50%
  position: fixed;
  top: 50%;
}

.section-header {
  border-bottom: 1px solid #414959;
  margin-bottom: 20px;

  h3 {
    margin-top: 5px;
  }
}

.grand-total {
  margin: 0;
}
