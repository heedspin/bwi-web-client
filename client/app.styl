// variables
white = #fff
blue = #21476a
dark-blue = #21476a

body
  font-size: 18px

// buttons
.button
  border-radius: 11px
  color: white
  border: none
  cursor: pointer
  
  &:focus
    outline: none
  
.button--blue
  background: blue

// forms
input
  border-radius: 11px
  border: 1px solid transparent
  border-top: none
  border-bottom: 1px solid #DDD
  box-shadow: inset 0 1px 2px rgba(0,0,0,.39), 0 -1px 1px #DDD, 0 1px 0 #DDD
  
  &:focus
    outline: none
  