header {
  background: #fbf3e2;
  padding: 20px 0;
}

.header__search {
  form {
    float: right;
  }
}

.form--inline {
  display: table;
  border-collapse: separate;
  
  input {
    padding: 13px 20px;
    font-size: 1.125em;
    display: table-cell;
    border-radius: 11px 0 0 11px;
    z-index: 2;
    position: relative;
  }
    
  span {
    display: table-cell;
    vertical-align: middle;
  
    button {
      margin-left: -1px;
      border-radius: 0 11px 11px 0;
      vertical-align: middle;
      padding: 13px 20px;
      font-size: 1em;
      border: 1px solid #dadbdb;
      background: white;
      cursor: pointer;
      
      &:focus {
        outline: none;
      }
    }
  }
}
