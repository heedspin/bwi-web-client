lightGrey = #a3a3a3;
beige = #fbf3e2;
grey = #333333;

[state="search"] {
  .wrapper {
    background: beige url('/data/images/search-bg.png');
    background-position: center center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

  .ui-select-container {
    margin: 0 auto;
    width: 820px;
  }

  .selectize-dropdown {
    width: 820px;
  }

  .selectize-input {
    input {
      font-size: 2em;
    }

    & > * {
      font-size: 2em;
    }
  }

  .selectize-control.single .selectize-input:after {
    content: "\e986";
    font-family: 'icomoon';
    width: 42px;
    text-align: center;
    line-height: 60px;
    border-radius: 0 11px 11px 0;
    margin-top: 0;
    border: none;
    right: 0px;
    color: lightGrey;
    font-size: 2em;
    height: 100%;
    top: 0px;
    right: 10px;
  }
}
