@import url(http://fonts.googleapis.com/css?family=Ubuntu:300,500,700,300italic,400italic);
@import url(http://fonts.googleapis.com/css?family=Ubuntu:Condensed);

red = #720707;
lightBlue = #7589a1;

baseFontFamily: "Ubuntu", "Helvetica Neue", Helvetica, Arial, sans-serif;
altFontFamily: "Ubuntu Condensed", baseFontFamily;

@font-face {
  font-family: 'icomoon';
  src:url('/data/fonts/icomoon.eot?9ghwxf');
  src:url('/data/fonts/icomoon.eot?#iefix9ghwxf') format('embedded-opentype'),
    url('/data/fonts/icomoon.woff?9ghwxf') format('woff'),
    url('/data/fonts/icomoon.ttf?9ghwxf') format('truetype'),
    url('/data/fonts/icomoon.svg?9ghwxf#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
  font-family: 'icomoon';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-caret-down:before {
  content: "\e601";
}

.icon-search:before {
  content: "\e986";
}

font-smoothing($smoothing = auto) {
  -webkit-font-smoothing $smoothing
  if $smoothing == antialiased {
    -moz-osx-font-smoothing grayscale
  }
  if $smoothing == subpixel-antialiased {
    -moz-osx-font-smoothing auto
  }
  font-smoothing $smoothing
}

body {
  font-family: baseFontFamily;
}

h1 {
  font-weight: 300;
}

h2 {
  font-weight: 700;
  font-smoothing: antialiased;
  font-size: 2em;
  color: white;
}

h3 {
  font-weight: 700;
  font-smoothing: antialiased;
  font-size: 2em;
  color: #414959;
}

h4 {
  font-weight: 400;
  font-smoothing: antialiased;
  font-family: altFontFamily;
  font-style: italic;
  font-size: 2em;
  color: #b51d2a;
}

h5 {
  font-weight: 300;
  font-size: 1.375em;
  color: #414959;
}

th {
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 700;
}

td {
  font-weight: 300;
  letter-spacing: 1px;
}

label {
  font-weight: 600;
  font-style: italic;
  font-smoothing: antialiased;
}

input {
  font-style: italic;
  font-weight: 400;
  letter-spacing: 1px;
  font-smoothing: antialiased;
}

.button {
  font-weight: 400;
  letter-spacing: 1px;
  font-smoothing: antialiased;
}

footer {
  p {
    font-weight: 400;
    font-smoothing: antialiased;
  }

  .button {
    font-weight: 300;
  }
}
.profile {
  p {
    font-weight: 600;
    font-style: italic;
    margin-bottom: 5px;
    font-smoothing: antialiased;
  }
}

.tab-wrapper li {
  font-family: altFontFamily;
  font-weight: 400;
  font-size: 1.333em;
  letter-spacing: 1px;
}

.button {
  text-transform: uppercase;
  font-smoothing: antialiased;
}

[state="login"] .wrapper {
  button {
    text-transform: none;
  }
}

a {
  color: lightBlue;
  text-decoration: none;
  transition: color 0.1s linear;

  &:active,
  &:focus,
  &:hover {
    color: red;
  }

  &:active,
  &:focus {
    outline: none;
  }
}
