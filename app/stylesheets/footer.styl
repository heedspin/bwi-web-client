footer {
  padding: 32px 0;
  background-color: rgba(#000, 0.05);
  height: 86px;
  border-top: 1px solid rgba(#000, 0.1);

  ol {
    text-align: right;
  }

  li {
    -webkit-font-smoothing: antialiased;
    list-style-type: none;
    display: inline-block;
    margin-left: 2em;
  }
}

[state="login"] footer a {
  color: #fff;

  &:hover,
  &:focus {
    color: red;
  }
}
