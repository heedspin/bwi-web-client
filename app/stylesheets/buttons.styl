outline-button(color)
  -moz-appearance: none;
  -ms-appearance: none;
  -o-appearance: none;
  -webkit-appearance: none;
  appearance: none;
  background-color: transparent;
  border: 1px solid color;
  border-radius: baseBorderRadius;
  color: color;
  cursor: pointer;
  line-height: 1;
  padding: 0.75em 1em;
  vertical-align: middle;
  white-space: nowrap;

  &:hover,
  &:focus {
    border-color: actionColor;
    color: actionColor;
  }

  &:disabled {
    cursor: not-allowed;
    opacity: 0.5;
  }

.button {
  border-radius: baseBorderRadius;
  color: white;
  border: none;
  cursor: pointer;
  font-size: 1.125em;

  &:focus {
    outline: none;
  }

  &:active {
    background: grey;
  }
}

.button--blue {
  background: blue;

  &:hover {
    background: lightBlue;
  }
}

.button--red {
  background: red;

  &:hover {
    background: lightRed;
  }
}

.button--grey {
  background: grey;

  &:hover {
    background: lightGrey;
  }
}

.button--med-grey {
  background: medGrey;

  &:hover {
    background: lightGrey;
  }
}

.button--light-grey {
  background: lightGrey;

  &:hover {
    background: darken(lightGrey, 5%);
  }
}

.button--large {
  font-size: 2em;
  padding: 10px 50px;
  margin-top: 20px;
}

.button--medium {
  text-transform: uppercase;
  padding: 15px 50px;
}

.export-button {
  outline-button(medGrey);
  font-size: 0.875em;
  margin-top: 1em;
  padding: 0.5em 0.75em;

  svg {
    fill: currentColor;
    height: 1em;
    margin-right: 0.5em;
    position: relative;
    top: 2px;
    width: 1em;
  }
}
