base-button(color)
  -moz-appearance: none;
  -ms-appearance: none;
  -o-appearance: none;
  -webkit-appearance: none;
  appearance: none;
  background-color: color;
  border: none;
  border-radius: baseBorderRadius;
  color: #fff;
  cursor: pointer;
  line-height: 1;
  padding: 0.75em 1em;
  vertical-align: middle;
  white-space: nowrap;

  &:hover,
  &:focus {
    background-color: lighten(color, 10%);
  }

  &:disabled {
    cursor: not-allowed;
    opacity: 0.5;
  }

.button {
  border-radius: baseBorderRadius;
  color: white;
  border: none;
  cursor: pointer;
  font-size: 1.125em;

  &:focus {
    outline: none;
  }

  &:active {
    background: grey;
  }
}

.button--blue {
  background: blue;

  &:hover {
    background: lightBlue;
  }
}

.button--red {
  background: red;

  &:hover {
    background: lightRed;
  }
}

.button--grey {
  background: grey;

  &:hover {
    background: lightGrey;
  }
}

.button--med-grey {
  background: medGrey;

  &:hover {
    background: lightGrey;
  }
}

.button--light-grey {
  background: lightGrey;

  &:hover {
    background: darken(lightGrey, 5%);
  }
}

.button--large {
  font-size: 2em;
  padding: 10px 50px;
  margin-top: 20px;
}

.button--medium {
  text-transform: uppercase;
  padding: 15px 50px;
}
