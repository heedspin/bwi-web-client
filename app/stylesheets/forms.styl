input {
  border: 1px solid #DDD;
  border-radius: 11px;

  &:focus {
    outline: none;
  }

  &.input--large {
    margin-bottom: 20px;
    font-size: 2em;
    border: none;
    width: 580px;
    padding: 20px 30px;
  }

}

.input--field-horizontal {
  display: inline-block;

  label {
    text-align: right;
    display: inline-block;
    width: 50px;
    margin-right: 8px;
  }
}

.input--field-inline {
  display: table;
  border-collapse: separate;

  input {
    padding: 13px 20px;
    font-size: 1.125em;
    display: table-cell;
    border-radius: 11px 0 0 11px;
    z-index: 2;
    position: relative;
  }

  i {
    display: table-cell;
    vertical-align: middle;
    font-size: 1.4em;
    color: lightGrey;
    background: white;
    border: 1px solid #dadbdb;
    border-radius: 0 11px 11px 0;
    width: 63px;
    text-align: center;
    margin-left: -1px;
  }
}

.selectize-dropdown {
  border: 0px solid;
}

.selectize-dropdown-content {
  max-height: 500px;
}

.select {
  margin-bottom: 25px;

  label {
    display: inline-block;
    vertical-align: top;
    margin-top: 10px;
    width: 70px;
    text-align: right;
    margin-right: 13px;
    text-transform: uppercase;
  }

  .ui-select-container {
    display: inline-block;
    width: 165px;
  }

  .selectize-input > * {
    font-size: 1.2em;
  }

  .selectize-control.single .selectize-input:after {
    content: "\e601";
    font-family: 'icomoon';
    width: 42px;
    text-align: center;
    line-height: 50px;
    border-radius: 0 11px 11px 0;
    margin-top: 0;
    border: none;
    right: 0px;
    color: black;
    font-size: 1.5em;
    border-left: 1px solid #dadbdb;
    height: 47px;
    top: 0;
    border-radius: 0 11px 11px 0;
  }
}
