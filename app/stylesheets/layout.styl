* {
  box-sizing: border-box;
}

html, body {
  height: 100%;
}

[state] {
  height: 100%;
}

.wrapper {
  margin-bottom: -86px; // pushes footer
  min-height: 100%;

  &:after {
    content: "";
    display: block;
    height: 86px; // pushes footer
  }
}

div[template-url="templates.pagination"] {
  display: none;
}
