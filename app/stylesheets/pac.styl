.industries {
  margin-bottom: 25px;
}
.industry-data {
  position: relative;
  margin-bottom: 10px;

  h5 {
    margin: 0;
  }
}
.industry__header,
.industry__total {
  display: inline-block;
}

.industry__total {
  position: absolute;
  right: 0;
}

.industry-graph {
  background: #c7c5c5;
  width: 100%;
  height: 10px;
}

.bar {
  background: #b12025;
  height: 10px;
  border-radius: 0 50px 50px 0
}
