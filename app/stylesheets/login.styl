[state="login"] .wrapper {
  background: url('/images/login-bg.jpg');
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
}

.auth {
  background-color: #fff;
  border-radius: baseBorderRadius;
  box-shadow: 0 1px 3px rgba(#000, 0.15);
  margin-bottom: 2em;
  margin-left: auto;
  margin-right: auto;
  max-width: 24em;
  padding: 3em 2em 2em;

  .logo {
    margin-bottom: 2em;

    img {
      max-width: 256px;
    }
  }

  button {
    margin-top: 1em;
    padding: 0.625em;
    width: 100%;
  }
}
