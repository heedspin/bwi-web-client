.table(ng-cloak)
  header
    .row
      .seven.columns
        h3.table__title {{ options.title }}
        button.export-button(ng-disabled="exportDisabled" ng-click="onExport()" ng-if="onExport")
          ng-include(src="'images/icon-download.svg'")
          span Export as .xlxs
      .five.columns
        .table__actions
          .input--field-inline
              input(ng-model="filterText", placeholder="Search by Name", ng-keypress="analytics(filterText)")
              i.icon-search
  .table-wrapper
    table(ng-table="tableParams")
      tr
        th(ng-repeat="col in options.columns", ng-class="col.title") {{ col.title }}
      tr(ng-init="link = linkTo(filteredData)", ng-repeat="filteredData in getFilteredData()")
        td(ng-init="colData = getDataForCol(filteredData, col.key, col.filter)", ng-repeat="col in options.columns")
          a(ng-href="{{link}}", ng-if="$first && link") {{colData}}
          span(ng-if="!$first || !link") {{colData}}
